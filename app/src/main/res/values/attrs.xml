<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ds">
        <attr name="colorBackground" format="color" />
        <attr name="colorButton" format="color" />
        <attr name="colorPrimary" format="color" />
        <attr name="colorPrimaryDark" format="color" />
        <attr name="colorPrimarySoft" format="color" />
        <attr name="colorAccent" format="color" />
        <attr name="colorAccentSoft" format="color" />
        <attr name="colorBgLight" format="color" />
        <attr name="colorBg" format="color" />
        <attr name="colorBgCard" format="color" />
        <attr name="colorText" format="color" />
        <attr name="colorMutedText" format="color" />
        <attr name="colorDark" format="color" />
        <attr name="colorDarkSoft" format="color" />
        <attr name="colorDark1" format="color" />
        <attr name="colorDark2" format="color" />
        <attr name="colorDark3" format="color" />
        <attr name="colorLight" format="color" />
        <attr name="colorLightSoft" format="color" />
        <attr name="colorLight1" format="color" />
        <attr name="colorLight2" format="color" />
        <attr name="colorLight3" format="color" />
        <attr name="colorDanger" format="color" />
        <attr name="colorDangerSoft" format="color" />
        <attr name="colorSuccess" format="color" />
        <attr name="colorSuccessSoft" format="color" />
        <attr name="colorWarning" format="color" />
        <attr name="colorWarningSoft" format="color" />
        <attr name="colorInformation" format="color" />
        <attr name="colorInformationSoft" format="color" />
        <attr name="colorTransparent" format="color" />

    </declare-styleable>

    <declare-styleable name="DividerView">
        <attr name="color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DiscreteScrollView">
        <attr name="dsv_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircularProgressIndicator">

        <attr name="progressColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="progressBackgroundStrokeWidth" format="dimension" />

        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />

        <attr name="formattingPattern" format="string|reference" />

        <attr name="drawDot" format="boolean" />
        <attr name="dotColor" format="color" />
        <attr name="dotWidth" format="dimension" />

        <attr name="startAngle" format="integer|reference" />

        <attr name="direction" format="enum">
            <enum name="clockwise" value="0" />
            <enum name="counterclockwise" value="1" />
        </attr>

        <attr name="progressCap" format="enum">
            <enum name="round" value="0" />
            <enum name="butt" value="1" />
        </attr>

        <attr name="enableProgressAnimation" format="boolean" />

        <attr name="fillBackground" format="boolean" />

        <attr name="gradientEndColor" format="color|reference" />
        <attr name="gradientType" format="enum">
            <enum name="no_gradient" value="0" />
            <enum name="linear" value="1" />
            <enum name="radial" value="2" />
            <enum name="sweep" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="RoundWaveView">
        <attr name="pointCount" format="integer" />
        <attr name="useAnimation" format="boolean" />
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
    </declare-styleable>
</resources>